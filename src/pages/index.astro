	<style>
		body {
			font-family: 'Poppins', sans-serif;
			background-color: #0B0F19; /* Warna dasar gelap untuk kontras */
			color: #E2E8F0; /* Teks off-white */
			position: relative;
			overflow-x: hidden;
		}

		/* Styling untuk "blob" animasi di latar belakang */
		.background-shapes {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: -1;
			overflow: hidden;
		}

		.blob {
			position: absolute;
			border-radius: 50%;
			filter: blur(120px);
			opacity: 0.25;
		}

		.blob1 {
			width: 500px;
			height: 500px;
			background: #6366F1; /* Indigo */
			top: -200px;
			left: -200px;
			animation: move 25s infinite alternate;
		}

		.blob2 {
			width: 400px;
			height: 400px;
			background: #EC4899; /* Pink */
			bottom: -150px;
			right: -150px;
			animation: move 30s infinite alternate-reverse;
		}
		
		.blob3 {
			width: 300px;
			height: 300px;
			background: #10B981; /* Emerald */
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			animation: move 35s infinite alternate;
		}


		@keyframes move {
			from {
				transform: translate(0, 0) rotate(0deg) scale(1);
			}
			to {
				transform: translate(150px, 50px) rotate(120deg) scale(1.2);
			}
		}

		/* Kelas untuk efek Glassmorphism yang disempurnakan */
		.glass-card {
			background: rgba(30, 41, 59, 0.3); /* Latar belakang lebih gelap */
			-webkit-backdrop-filter: blur(20px);
			backdrop-filter: blur(20px);
			border: 1px solid rgba(255, 255, 255, 0.1);
			box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
			transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
		}

		.glass-card:hover {
			border-color: rgba(255, 255, 255, 0.3);
			transform: translateY(-5px);
		}
		
		/* Animasi melayang untuk gambar hero */
		@keyframes float {
			0% { transform: translateY(0px); }
			50% { transform: translateY(-20px); }
			100% { transform: translateY(0px); }
		}
		.floating-image {
			animation: float 5s ease-in-out infinite;
		}
		
		/* Efek underline untuk navigasi */
		.nav-link {
			position: relative;
			transition: color 0.3s ease;
		}
		.nav-link::after {
			content: '';
			position: absolute;
			width: 0;
			height: 2px;
			bottom: -4px;
			left: 50%;
			transform: translateX(-50%);
			background-color: #818CF8;
			transition: width 0.4s cubic-bezier(0.22, 1, 0.36, 1);
		}
		.nav-link:hover::after {
			width: 100%;
		}
		.nav-link:hover {
			color: #C7D2FE;
		}
		
		/* Gradient Text */
		.gradient-text {
			background: linear-gradient(to right, #A5B4FC, #EC4899);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
		}
	</style>
